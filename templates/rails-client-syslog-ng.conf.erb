
# You should set your IP address / port of the remote logging server. 
destination log_server { 
  <%= configuration[:syslog_ng][:log_server_protocol] || "udp" %>("<%= configuration[:syslog_ng][:log_server_ip] || raise('missing log_server_ip') %>" port(<%= configuration[:syslog_ng][:log_server_port] || 514 %>)); 
}; 

# send just about everything to the log server
log {
  source(s_all);
  destination(log_server);
};
